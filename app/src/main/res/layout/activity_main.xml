<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PurchaseActivity"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@color/purpless">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:src="@drawable/logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="성신여대 굿즈샵"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/productImg"
            android:layout_width="111dp"
            android:layout_height="126dp"
            android:scaleType="fitXY"
            android:src="@drawable/bit8"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:ellipsize="end"
                    android:text="상품명"
                    android:textColor="#666666"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8비트 수룡이 스티커"
                    android:textColor="#000000"
                    android:textSize="14dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/productPriceText"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="- 가격: 2,500원"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12dp"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="283dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 소개"
            android:textSize="12dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12dp"></TextView>

        <TextView
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:text="성신여자대학교 마스코트인 수룡이 스티커 입니다. 8비트 구성으로 아날로그 하면서도 깜찍한 수룡이 스티커를 구매해보세요!
"
            android:textColor="@color/colorBlack"></TextView>

        <TextView
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorBlack"></TextView>

        <TextView
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:text="여러분의 다이어리, 공책, 메모장 등 수룡이로 인해 특별한 모습으로 탈바꿈될 것이에요! 가격도 싸다, 싸! 단돈 2500원에 어서 빨리 수룡이를 구매하자고요~
"
            android:textColor="@color/colorBlack"></TextView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cuponBackColor"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="4dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/purshase_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purpless"
            android:text="바로구매"
            android:textColor="#FFFFFF"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/cart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장바구니"
            android:background="@color/purpless"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>